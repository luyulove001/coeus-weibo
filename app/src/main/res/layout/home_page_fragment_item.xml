<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/home_page"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/home_page_head"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_usert"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_page_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxEms="10"
                    android:paddingLeft="17dp"
                    android:text="用户名"
                    android:textColor="#ffffff"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/home_page_usertime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="17dp"
                    android:gravity="center_vertical"
                    android:text="时间"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/home_page_usercontent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:text="内容"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_page_he_rela"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FF242424"
            android:focusable="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_page_he_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="17dp"
                android:text="转发用户名"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/home_page_usercomments"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:text="内容"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_link_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="17dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/link_trans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="17dp"
            android:text="网页链接"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/home_page_me_relaytive"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_page_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="17dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/home_page_pic_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/home_page_pic"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="1张图片点击查看"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_page_he_relaytive"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBottomDark">

        <ImageView
            android:id="@+id/home_page_he_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="17dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/home_page_he_pic_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/home_page_he_pic"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="1张图片点击查看"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/white" />
</LinearLayout>
