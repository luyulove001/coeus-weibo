<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/linear_usert"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/home_page_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="17dp"
            android:text="wetwet"
            android:textSize="25sp"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/home_page_usertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:text="sdg"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/home_page_he_rela"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_usert">
    <TextView
        android:id="@+id/home_page_usercontent"
        android:layout_width="fill_parent"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:text="sdgg"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/home_page_pic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_page_usercontent"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:textSize="25sp"
        android:visibility="gone"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/home_page_he_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:visibility="gone"
        android:layout_below="@+id/home_page_pic"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:text="dsgdg"/>
    <TextView
        android:id="@+id/home_page_usercomments"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_page_he_user"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:visibility="gone"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:text="dsgdg"/>
    <TextView
        android:id="@+id/home_page_he_pic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_page_usercomments"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:visibility="gone"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:text="dsgdg"/>
    </RelativeLayout>
    <View
        android:layout_below="@+id/home_page_he_rela"
        android:layout_width="fill_parent"
        android:layout_marginTop="8dp"
        android:layout_height="1dp"
        android:background="@color/white"
        >
    </View>
</RelativeLayout>
